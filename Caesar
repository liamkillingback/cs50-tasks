#include <cs50.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>
#include <stdlib.h>

int main(int argc, string argv[])
{
    if (argc != 2)
    {
        printf("Usage: ./caesar key");
        return 1;
    }
    else printf("Valid input\n");

    for (int i = 0; i < strlen(argv[1]); i++)
    {
        if (!isdigit(argv[1][i]))
        {
            printf("Usage: ./caesar key");
            return 1;
        }
        else printf("Valid input\n%s\n", argv[1]);
    }

    int k = atoi(argv[1]);
    string phrase = get_string("Enter phrase here: ");
    string cypher = phrase;

    for (int i = 0; i < strlen(phrase); i++)
    {
        if      (isupper(phrase[i]))
        {
            cypher[i] = (phrase[i] + k -65) % 26 + 65;
        }
        else if (islower(phrase[i]))
        {
            cypher[i] = (phrase[i] + k - 97) % 26 + 97;
        }
    }
    printf("Ciphertext: %s\n", cypher);
}














